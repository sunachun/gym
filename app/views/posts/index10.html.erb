<div class="arrange-index">
  <div class="list-left">
    <ul>
      <li class="list"><%= link_to("すべて","/posts/index") %></li>
      <li><%= link_to("床(男子)", "/posts/男子　床") %></li>
      <li><%= link_to("鞍馬", "/posts/鞍馬") %></li>
      <li><%= link_to("吊り輪", "/posts/吊り輪") %></li>
      <li><%= link_to("跳馬(男子)", "/posts/男子　跳馬") %></li>
      <li><%= link_to("平行棒", "/posts/平行棒") %></li>
      <li><%= link_to("鉄棒", "/posts/鉄棒") %></li>
      <li><%= link_to("跳馬(女子)", "/posts/女子　跳馬") %></li>
      <li><%= link_to("段違い平行棒", "/posts/段違い平行棒") %></li>
      <li><%= link_to("平均台", "/posts/平均台") %></li>
      <li><%= link_to("床(女子)", "/posts/女子　床") %></li>
    </ul>
  </div>
  <div class="arrange-index-container">
    <% @posts.each do |post| %>
    <div class="posts-index-item">
      <div class="post-left">
        <img src="<%= "/user_images/#{post.user.image_name}" %>">
      </div>
      <div class="post-right">
        <div class="post-user-name">
          <%= link_to(post.user.name, "/users/#{post.user.id}") %>
        </div>
        <%= link_to(post.trick_name, "/posts/#{post.id}") %><br>
        <video width="400px" height="300px" src="<%= "/user_videos/#{post.video}" %>" controls ></video><br>
        <% if Like.find_by(user_id: @current_user.id, post_id: post.id) %>
          <%= link_to("/likes/#{post.id}/destroy", {method: :post}) do %>
            <span class="fa fa-heart like-btn-unlike"></span>
          <% end %>
        <% else %>
          <%= link_to("/likes/#{post.id}/create", {method: :post}) do %>
            <span class="fa fa-heart like-btn"></span>
          <% end %>
        <% end %>
        <%= @like_count %><br>
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
        
    </div>
    <% end %>
    
  </div>
</div>